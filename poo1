		Caneta c1;
		
		c1 = new Caneta();
		c1.cor= "Vermelho";
		c1.tampada = true;
		c1.modelo = "Bic";
		//c1.status();
		c1.rabiscar();
		
		
		Caneta c2;
		
		c2 = new Caneta();
		c2.cor= "Limao";
		c2.tampada = false;
		c2.modelo = "Ahlitog";
		
		c2.status();

	}

}















